{
  "name": "spb",
  "version": "0.0.1",
  "description": "Steam Player Bans",
  "engines": {
    "node": ">= 8.5.0",
    "npm": ">= 5.3.0"
  },
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production run-s build serve",
    "prebuild": "rimraf \"./dist\" && mkdir \"./dist\"",
    "build": "run-p build:*",
    "build:html": "cpx \"src/**/*.{html,js,css,png,jpg,txt,ico}\" dist",
    "dev": "cross-env NODE_ENV=development run-p build serve:dev watch",
    "serve": "node \"./src/lib/express.js\"",
    "serve:dev": "nodemon \"./src/lib/express.js\"",
    "watch": "run-p watch:*",
    "watch:html": "cpx \"src/**/*.{html,js,css,png,jpg,txt,ico}\" dist --watch --verbose"
  },
  "keywords": [
    "Steam",
    "Vac",
    "Bans"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:Ex-iT/SPB.git"
  },
  "bugs": {
    "url": "https://github.com/Ex-iT/SPB/issues"
  },
  "author": "Ex-iT",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-html": "^4.0.3",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-promise": "^3.6.0",
    "nodemon": "^1.17.3"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "cpx": "^1.5.0",
    "cross-env": "^5.1.4",
    "express": "^4.16.3",
    "nedb": "^1.8.0",
    "node-fetch": "^2.1.2",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2"
  }
}
